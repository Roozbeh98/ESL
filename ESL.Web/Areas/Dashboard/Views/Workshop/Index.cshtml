@model IEnumerable<ESL.Web.Areas.Dashboard.Models.ViewModels.Model_WorkshopPlan>
@using ESL.Common.Plugins

@{
    ViewBag.Title = "لیست کارگاه ها";
    Layout = "~/Areas/Dashboard/Views/Shared/_Master.cshtml";
}


<div class="panel panel-body panel-default  navigation">

    <div class="pull-left">
        <h4 class="navigation-title"><b>لیست کارگاه ها</b></h4>
    </div>

    <div class="pull-right">
        <a href="@Url.Action("Create", "Workshop" , new { area = "Dashboard" })"><i class="glyphicon glyphicon-plus navigation-btn-icon"></i></a>
    </div>

</div>

<div class="panel panel-default">

    <div class="panel-body table-body" style="overflow-x:auto;">

        <table id="DateTable" class="table table-bordered table-striped table-secondary" style="width:100%;">

            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Workshop)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Cost)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Location)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Capacity)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Date)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.CreationDate)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Activeness)</th>
                    <th scope="col" data-orderable="false">کنترل</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int x = 0;
                }

                @foreach (var item in Model)
                {
                    x++;

                    <tr>
                        <td scope="row">@x</td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Workshop) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Description) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Cost) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Location) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Capacity) </span>
                        </td>
                        <td scope="row">
                            <span> @PersianDateExtensionMethods.ToPeString(item.Date, "yyyy/MM/dd HH:mm") </span>
                        </td>
                        <td scope="row">
                            <span> @PersianDateExtensionMethods.ToPeString(item.CreationDate, "yyyy/MM/dd") </span>
                        </td>
                        <td scope="row">
                            <span> @(item.Activeness ? "فعال" : "غیر فعال") </span>
                        </td>
                        <td scope="row">
                            <a class="btn btn-primary btn-sm glyphicon glyphicon-ok" href="javascript:void(0)" onclick="SetActiveness(@item.ID)"> </a>
                            <a class="btn btn-info btn-sm glyphicon glyphicon-list" href="@Url.Action("Details", "Workshop", new { area = "Dashboard", id = item.ID })"> </a>
                            <a class="btn btn-warning btn-sm glyphicon glyphicon-pencil" href="@Url.Action("Edit", "Workshop", new { area = "Dashboard", id = item.ID })"> </a>
                            <a class="btn btn-danger btn-sm glyphicon glyphicon-trash" href="javascript:void(0)" onclick="Delete(@item.ID)"> </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>


@Html.Partial("_Modal")

@section Modal {
    <script>

        function Delete(id) {
            $.ajax({
                url: "/Dashboard/Workshop/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('حدف آزمون');
                $('#myModalBody').html(result);
            });
        }

        function SetActiveness(id) {
            $.ajax({
                url: "/Dashboard/Workshop/SetActiveness/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('تغییر وضعیت فعال بودن');
                $('#myModalBody').html(result);
            });
        }

    </script>
}